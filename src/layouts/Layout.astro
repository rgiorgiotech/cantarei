---
// src/layouts/Layout.astro
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
    title: string;
    description?: string;
    simplePage?: boolean;
}

const {
    title,
    description = "Coro Polifonico Canta Rei APS - Palermo",
    simplePage = false,
} = Astro.props;
---

<!doctype html>
<html lang="it">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/assets/canta-rei-logo.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | Canta Rei APS</title>
        <ViewTransitions />
    </head>
    <body
        class="flex flex-col min-h-screen bg-background-primary text-text-primary font-sans antialiased"
    >
        {!simplePage && <Header />}

        <main class="flex-grow animate-fade-in">
            <slot />
        </main>

        {!simplePage && <Footer />}
    </body>
</html>
