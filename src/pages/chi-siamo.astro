---
// src/pages/chi-siamo.astro
import Layout from "../layouts/Layout.astro";
import Container from "../components/ui/Container.astro";
import Card from "../components/ui/Card.astro";
import { director, boardMembers, choirMembers } from "../data/team";
---

<Layout title="Chi Siamo">
    <section class="py-20 bg-background-primary">
        <Container>
            <div
                class="max-w-4xl mx-auto text-center space-y-8 animate-fade-in"
            >
                <h1
                    class="text-5xl font-bold text-accent-primary tracking-tight"
                >
                    Chi Siamo
                </h1>
                <div
                    class="prose prose-lg text-gray-700 mx-auto leading-relaxed text-balance"
                >
                    <p>
                        Il coro Canta Rei, dell'Associazione Coro Polifonico
                        Canta Rei APS, nasce a Palermo nel 2024. Presieduto
                        dall'Ing. Luisa Lombardo e diretto dal maestro Antonina
                        Terzo, il coro rappresenta un continuum stilistico ed
                        emotivo con la storica realtà corale da cui prende vita.
                    </p>
                    <p>
                        Il nostro nome coniuga l'amore per la musica con
                        l'armonia sociale, emotiva e di pensiero. Il nostro
                        repertorio non ha confini: spaziamo dal sacro al
                        profano, dal pop al folk, fino al jazz, consapevoli che
                        la Musica è un linguaggio universale.
                    </p>
                </div>
            </div>
        </Container>
    </section>

    <section class="py-20 bg-white border-y border-gray-100">
        <Container>
            <div class="flex flex-col lg:flex-row gap-12 items-center">
                <div class="lg:w-1/3 flex-shrink-0">
                    <div
                        class="relative rounded-2xl overflow-hidden shadow-xl aspect-[3/4] group"
                    >
                        <div
                            class="absolute inset-0 bg-gray-200 flex items-center justify-center text-gray-400"
                        >
                            [Foto Maestro Terzo]
                        </div>
                    </div>
                </div>

                <div class="lg:w-2/3 space-y-6">
                    <div class="space-y-2">
                        <h2 class="text-4xl font-bold text-text-primary">
                            {director.name}
                        </h2>
                        <p
                            class="text-xl font-medium text-accent-primary uppercase tracking-wider"
                        >
                            {director.role}
                        </p>
                    </div>

                    <div
                        class="prose prose-lg text-gray-600 space-y-4 text-justify"
                    >
                        {director.bio.map((paragraph) => <p>{paragraph}</p>)}
                    </div>
                </div>
            </div>
        </Container>
    </section>

    <section class="py-20 bg-background-primary">
        <Container>
            <h2 class="text-3xl font-bold text-center mb-12">
                Il Consiglio Direttivo
            </h2>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    boardMembers.map((member) => (
                        <Card class="flex items-center gap-4 hover:-translate-y-1 transition-transform duration-300">
                            <div class="p-3 bg-accent-primary/10 rounded-full">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    width="20"
                                    height="20"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="2"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    class="text-accent-primary"
                                >
                                    <path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2" />
                                    <circle cx="9" cy="7" r="4" />
                                    <path d="M22 21v-2a4 4 0 0 0-3-3.87" />
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm font-bold text-accent-primary uppercase tracking-wide mb-1">
                                    {member.role}
                                </p>
                                <p class="text-xl font-semibold text-gray-900">
                                    {member.name}
                                </p>
                            </div>
                        </Card>
                    ))
                }
            </div>
        </Container>
    </section>

    <section class="py-20 bg-white">
        <Container>
            <div class="text-center mb-16">
                <h2 class="text-4xl font-bold mb-4">I Nostri Coristi</h2>
                <p class="text-xl text-gray-600">
                    Le voci che danno vita alla nostra armonia
                </p>
            </div>

            <div class="grid md:grid-cols-2 gap-12 lg:gap-20">
                <div class="space-y-4">
                    <h3
                        class="text-2xl font-bold text-accent-primary border-b border-accent-primary/20 pb-2"
                    >
                        Soprani
                    </h3>
                    <ul class="space-y-2">
                        {
                            choirMembers.soprani.map((name) => (
                                <li class="text-lg text-gray-700 hover:text-accent-primary transition-colors cursor-default">
                                    • {name}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="space-y-4">
                    <h3
                        class="text-2xl font-bold text-accent-primary border-b border-accent-primary/20 pb-2"
                    >
                        Contralti
                    </h3>
                    <ul class="space-y-2">
                        {
                            choirMembers.contralti.map((name) => (
                                <li class="text-lg text-gray-700 hover:text-accent-primary transition-colors cursor-default">
                                    • {name}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="space-y-4">
                    <h3
                        class="text-2xl font-bold text-accent-primary border-b border-accent-primary/20 pb-2"
                    >
                        Tenori
                    </h3>
                    <ul class="space-y-2">
                        {
                            choirMembers.tenori.map((name) => (
                                <li class="text-lg text-gray-700 hover:text-accent-primary transition-colors cursor-default">
                                    • {name}
                                </li>
                            ))
                        }
                    </ul>
                </div>

                <div class="space-y-4">
                    <h3
                        class="text-2xl font-bold text-accent-primary border-b border-accent-primary/20 pb-2"
                    >
                        Baritoni
                    </h3>
                    <ul class="space-y-2">
                        {
                            choirMembers.baritoni.map((name) => (
                                <li class="text-lg text-gray-700 hover:text-accent-primary transition-colors cursor-default">
                                    • {name}
                                </li>
                            ))
                        }
                    </ul>
                </div>
            </div>
        </Container>
    </section>
</Layout>
