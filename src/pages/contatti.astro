---
import Layout from "../layouts/Layout.astro";
import Container from "../components/ui/Container.astro";
import Card from "../components/ui/Card.astro";
import Button from "../components/ui/Button.astro";

// Importiamo le icone direttamente (più efficiente)
import { Mail, Facebook, Instagram, MapPin, Heart } from "lucide-astro";
---

<Layout title="Contatti">
    <section class="py-20 bg-background-primary min-h-screen">
        <Container>
            <div class="text-center mb-16 animate-fade-in">
                <h1 class="text-5xl font-bold text-accent-primary mb-6">
                    Contatti
                </h1>
                <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                    Siamo a tua disposizione per informazioni, audizioni o
                    collaborazioni.
                </p>
            </div>

            <div class="grid lg:grid-cols-2 gap-12 max-w-5xl mx-auto">
                <div class="space-y-8">
                    <Card>
                        <h2
                            class="text-2xl font-bold mb-6 flex items-center gap-3"
                        >
                            <MapPin class="text-accent-primary" />
                            Sede e Dati
                        </h2>
                        <div class="space-y-2 text-lg text-gray-700">
                            <p class="font-bold text-text-primary">
                                Associazione Coro Polifonico Canta Rei APS
                            </p>
                            <p>Via Santocanale, 76</p>
                            <p>90151 – Palermo (PA)</p>
                            <p class="font-mono text-base text-gray-500 mt-4">
                                CF: 97381710827
                            </p>
                        </div>
                    </Card>

                    <Card>
                        <h2
                            class="text-2xl font-bold mb-6 flex items-center gap-3"
                        >
                            <Mail class="text-accent-primary" />
                            Recapiti
                        </h2>
                        <div class="space-y-6">
                            <a
                                href="mailto:associazione@cantarei.it"
                                class="flex items-center gap-4 text-gray-700 hover:text-accent-primary transition-colors group"
                            >
                                <div
                                    class="p-3 bg-gray-100 rounded-full group-hover:bg-accent-primary/10 transition-colors"
                                >
                                    <Mail size={24} />
                                </div>
                                <span class="text-lg"
                                    >associazione@cantarei.it</span
                                >
                            </a>

                            <a
                                href="mailto:associazione@pec.cantarei.it"
                                class="flex items-center gap-4 text-gray-700 hover:text-accent-primary transition-colors group"
                            >
                                <div
                                    class="p-3 bg-gray-100 rounded-full group-hover:bg-accent-primary/10 transition-colors"
                                >
                                    <div
                                        class="font-bold text-xs border border-current px-1 rounded"
                                    >
                                        PEC
                                    </div>
                                </div>
                                <span class="text-lg"
                                    >associazione@pec.cantarei.it</span
                                >
                            </a>

                            <div class="border-t border-gray-100 my-4"></div>

                            <a
                                href="https://instagram.com/associazionecantarei"
                                target="_blank"
                                class="flex items-center gap-4 text-gray-700 hover:text-pink-600 transition-colors group"
                            >
                                <div
                                    class="p-3 bg-gray-100 rounded-full group-hover:bg-pink-50 transition-colors"
                                >
                                    <Instagram size={24} />
                                </div>
                                <span class="text-lg"
                                    >@associazionecantarei</span
                                >
                            </a>

                            <a
                                href="https://facebook.com/associazionecantarei"
                                target="_blank"
                                class="flex items-center gap-4 text-gray-700 hover:text-blue-600 transition-colors group"
                            >
                                <div
                                    class="p-3 bg-gray-100 rounded-full group-hover:bg-blue-50 transition-colors"
                                >
                                    <Facebook size={24} />
                                </div>
                                <span class="text-lg"
                                    >/associazionecantarei</span
                                >
                            </a>
                        </div>
                    </Card>
                </div>

                <div>
                    <Card
                        class="h-full border-accent-primary/30 bg-gradient-to-b from-white to-background-secondary relative overflow-hidden"
                    >
                        <div
                            class="absolute -top-10 -right-10 text-accent-primary/5"
                        >
                            <Heart size={200} />
                        </div>

                        <div
                            class="relative z-10 text-center flex flex-col h-full justify-center py-8"
                        >
                            <div
                                class="mx-auto bg-accent-primary/10 p-4 rounded-full text-accent-primary mb-6"
                            >
                                <Heart size={48} />
                            </div>

                            <h2 class="text-3xl font-bold mb-4">
                                Sostieni la Musica
                            </h2>
                            <p
                                class="text-gray-600 mb-8 text-lg leading-relaxed"
                            >
                                Il tuo contributo ci aiuta a realizzare
                                concerti, acquistare spartiti e portare avanti
                                la nostra passione. Ogni piccolo gesto è
                                importante.
                            </p>

                            <div
                                class="bg-white p-8 rounded-xl shadow-sm border border-gray-100"
                            >
                                <p class="font-bold text-gray-800 mb-4">
                                    Dona in sicurezza con PayPal
                                </p>
                                <form
                                    action="https://www.paypal.com/donate"
                                    method="post"
                                    target="_top"
                                >
                                    <input
                                        type="hidden"
                                        name="hosted_button_id"
                                        value="6FEKLL68AA3GJ"
                                    />
                                    <input
                                        type="image"
                                        src="https://www.paypalobjects.com/it_IT/IT/i/btn/btn_donateCC_LG.gif"
                                        name="submit"
                                        title="PayPal - The safer, easier way to pay online!"
                                        alt="Fai una donazione con il pulsante PayPal"
                                        class="transition-transform hover:scale-105 active:scale-95"
                                    />
                                    <img
                                        alt=""
                                        src="https://www.paypal.com/it_IT/i/scr/pixel.gif"
                                        width="1"
                                        height="1"
                                    />
                                </form>
                            </div>
                        </div>
                    </Card>
                </div>
            </div>
        </Container>
    </section>
</Layout>
