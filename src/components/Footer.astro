---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
---

<div class="bg-background-secondary py-8 border-t border-gray-200 mt-auto">
    <div class="content-container">
        <div
            class="flex flex-col sm:flex-row justify-center items-center gap-8 sm:gap-12 opacity-90 grayscale hover:grayscale-0 transition-all duration-500"
        >
            <img
                src="/assets/FENIARCO-LOGO.jpg"
                alt="FENIARCO"
                class="h-12 sm:h-16 object-contain mix-blend-multiply"
            />
            <img
                src="/assets/ARS_CORI_logo.jpg"
                alt="ARS CORI"
                class="h-12 sm:h-16 object-contain mix-blend-multiply"
            />
        </div>
    </div>
</div>

<footer class="bg-footer-bg text-footer-text py-12">
    <div class="content-container">
        <div
            class="grid grid-cols-1 md:grid-cols-3 gap-12 text-center md:text-left"
        >
            <div class="space-y-2">
                <p class="font-semibold text-xl mb-4 text-white">
                    Associazione Coro Polifonico<br />Canta Rei APS
                </p>
                <p>Via Santocanale, 76</p>
                <p>90151 – Palermo (PA)</p>
                <p class="font-mono text-sm opacity-80">CF: 97381710827</p>
            </div>

            <div class="text-center">
                <h3 class="text-2xl mb-6 font-semibold text-white">
                    I nostri sponsor
                </h3>
                <div class="flex flex-wrap items-center justify-center gap-6">
                    <img
                        src="/assets/logo-unipa-white.png"
                        alt="Università degli Studi di Palermo"
                        class="h-10 object-contain opacity-80 hover:opacity-100 transition-opacity"
                    />
                    <img
                        src="/assets/logo-sbc.png"
                        alt="Sicily by Car"
                        class="h-10 object-contain bg-white rounded px-1 opacity-80 hover:opacity-100 transition-opacity"
                    />
                    <img
                        src="/assets/opperbacco.png"
                        alt="Opperbacco"
                        class="h-10 object-contain opacity-80 hover:opacity-100 transition-opacity"
                    />
                    <img
                        src="/assets/vincenzo-latino.png"
                        alt="Vincenzo Latino"
                        class="h-10 object-contain opacity-80 hover:opacity-100 transition-opacity"
                    />
                </div>
            </div>

            <div class="md:text-right space-y-4 flex flex-col justify-between">
                <div>
                    <a
                        href="/assets/docs/informativa-privacy-ver-1.pdf"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm opacity-60 hover:opacity-100 hover:text-white underline transition-all"
                    >
                        Informativa Privacy
                    </a>
                </div>
                <div class="text-sm opacity-60">
                    <p>&copy; {currentYear} Canta Rei APS</p>
                    <p class="mt-1">
                        Created with ❤️ by <a
                            href="https://www.giorgiomessina.eu"
                            target="_blank"
                            class="hover:text-white underline"
                            >Giorgio Messina</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
